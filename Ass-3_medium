Factorial Program In Java
import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a number");
        int n=sc.nextInt();
        int fact=1;
        int sum=0;
        for(int i=1;i<=n;i++){
            fact*=i;
            sum+=fact;
        }
        System.out.println(+fact);
    }
}
