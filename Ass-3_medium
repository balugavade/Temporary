Calculate CGPA Java Program
import java.util.Scanner;
import java.lang.Math;

class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the total marks ");
        double total=sc.nextInt();
        System.out.println("Enter the obtained marks ");
        double obt=sc.nextInt();
        double per=(obt/total)*100;
        double cgpa=per/9.5;
        System.out.println("obtained cgpa "+cgpa);
        System.out.println("obtained percentage "+per);
    }
}
------------------------------------------------------
Compound Interest Java Program
import java.util.Scanner;
import java.lang.Math;

class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the ammount ");
        double amt=sc.nextInt();
        System.out.println("Enter the rate of interest ");
        double per=sc.nextInt();
        System.out.println("Enter the years ");
        int yr=sc.nextInt();
        for(int i=1;i<=yr;i++){
            double interest=(amt*per)/100;
            amt+=interest;
        }
        System.out.println("compound interest is "+amt);
    }
}
-----------------------------------------------------------
Calculate Average Marks
import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int sum = 0;
        int n = 5;  // number of subjects

        for (int i = 1; i <= n; i++) {
            System.out.print("Enter marks for subject " + i + ": ");
            int marks = sc.nextInt();
            sum += marks;
        }

        double average = sum / (double)n;  // convert to double for decimal average
        System.out.println("Average marks = " + average);
    }
}
