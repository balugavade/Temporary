Sum Of N Numbers
import java.util.Scanner;
import java.lang.Math;

class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the nth number ");
        int n=sc.nextInt();
        int sum =(n*(n+1))/2;
        System.out.println("sum of n natural numbers "+sum);
    }
}
