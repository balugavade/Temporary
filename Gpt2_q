Pallindrome check

import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        System.out.println("Enter a number");
        int x= sc.nextInt();
        int rev=0;
        int original=x;
        while(x != 0){
            int rem=x%10;
            rev=rev*10+rem;
            x=x/10;
        }
        if (original==rev){
            System.out.print(original+" the given number is a pallindrome ");
        }else{
            System.out.print(original+" the given number is not pallindrome ");
        }
    }
}
